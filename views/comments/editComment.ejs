<%- include("../partials/header.ejs") %>
<div class="container form-container" style="width: 35%;">
  <h1>Edit Comment</h1>
  <form action="/campings/<%= camping_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" style="display: flex; flex-direction: column; margin-top: 50px;">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        id="text"
        name="comment[text]"
        value="<%= comment.text %>"
      />
      
    </div>
    <button type="submit" class="btn btn-primary">Edit Comment</button>
  </form>

</div>

